<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_characters">

    <fragment
        android:id="@+id/navigation_characters"
        android:name="com.example.rickandmortyapiproject.ui.characters.CharactersFragment"
        android:label="@string/title_characters"
        tools:layout="@layout/fragment_recycler_list" >
        <action
            android:id="@+id/action_navigation_characters_to_characterDetailsFragment"
            app:destination="@id/characterDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_locations"
        android:name="com.example.rickandmortyapiproject.ui.locations.LocationsFragment"
        android:label="@string/title_locations"
        tools:layout="@layout/fragment_recycler_list" />

    <fragment
        android:id="@+id/navigation_episodes"
        android:name="com.example.rickandmortyapiproject.ui.episodes.EpisodesFragment"
        android:label="@string/title_episodes"
        tools:layout="@layout/fragment_recycler_list" />

    <fragment
        android:id="@+id/characterDetailsFragment"
        android:name="com.example.rickandmortyapiproject.ui.characters.CharacterDetailsFragment"
        android:label="fragment_character_details"
        tools:layout="@layout/fragment_character_details" >
        <argument
            android:name="character"
            app:argType="com.example.rickandmortyapiproject.models.Character" />
    </fragment>
</navigation>